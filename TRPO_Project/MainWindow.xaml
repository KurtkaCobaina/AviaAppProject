<Window x:Class="TRPO_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400"
           WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- Шапка приложения -->
            <DockPanel Background="#1E90FF" Height="50">
                <TextBlock Text="AviaApp" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                </StackPanel>
            </DockPanel>

            <!-- Форма входа -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" Width="300">
                <TextBlock Text="Вход в систему" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,14"/>
                <TextBlock Text="Имя пользователя"></TextBlock>
                <TextBox Name="Username" Margin="0,10"/>
                <TextBlock Text="Пароль"></TextBlock>
                <PasswordBox x:Name="Password" Margin="0,10"/>
                <Button Content="Войти" Background="#1E90FF" Foreground="White" Margin="0,10,0,0" Click="Button_Click"/>
                <Button Name="LabelRegistr" Content="Нет аккаунта? Зарегистрируйтесь" Background="#1E90FF" Foreground="White" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="LabelRegistr_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>