<Window x:Class="TRPO_Project.UserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO_Project"
        mc:Ignorable="d"
        Title="UserControl" Height="600" Width="800"
           WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <!-- Определение строк для Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Заголовок -->
            <RowDefinition Height="Auto" />
            <!-- Панель поиска -->
            <RowDefinition Height="*" />
            <!-- Список пользователей -->
            <RowDefinition Height="Auto" />
            <!-- Поля для редактирования -->
        </Grid.RowDefinitions>

       
        

        <!-- Панель поиска -->
        <!-- Панель поиска -->
        <Border CornerRadius="10" 
        Background="#1E90FF" 
        Padding="10" 
        Margin="0,10,0,20" 
        Grid.Row="1">
            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                <TextBlock Text="Управление пользователями" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="White"
                   Padding="10" />
                <TextBlock Text="Поиск:" 
                   VerticalAlignment="Center" 
                   Margin="20,0,5,0" 
                   Foreground="White"/>
                <TextBox x:Name="SearchTextBox" 
                 Width="200" 
                 Height="30" 
                 Margin="20,0,10,0" />
                <Border Background="#1E90FF" 
                CornerRadius="5" 
                Padding="5" 
                Margin="0,0,10,0">
                    <Button Content="Найти" 
                    Width="100" 
                    Click="SearchButton_Click" 
                    Background="Transparent" 
                    Foreground="White" 
                    BorderBrush="Transparent" 
                    Padding="5" 
                    VerticalAlignment="Center" />
                </Border>
            </StackPanel>
        </Border>

        <!-- Список пользователей -->
        <ListBox x:Name="UsersListBox" 
                 DisplayMemberPath="Email" 
                 Margin="0,0,0,10" 
                 SelectionChanged="UsersListBox_SelectionChanged" 
                 Grid.Row="2" />

        <!-- Поля для редактирования -->
        <StackPanel Orientation="Vertical" 
                    Margin="0,10,0,0" 
                    Grid.Row="3">
            <TextBlock Text="Имя:" />
            <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Фамилия:" />
            <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Пароль:" />
            <TextBox x:Name="PasswordTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Дата рождения (yyyy-MM-dd):" />
            <TextBox x:Name="DateOfBirthTextBox" Margin="0,0,0,10" IsEnabled="False" />

            <TextBlock Text="Роль:" />
            <TextBox x:Name="RoleTextBox" Margin="0,0,0,10" />

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Border Background="#1E90FF" 
        CornerRadius="5" 
        Padding="5" 
        Margin="0,0,10,0">
                    <Button Content="Изменить" 
            Width="100" 
            Click="EditButton_Click" 
            Background="Transparent" 
            Foreground="White" 
            BorderBrush="Transparent" 
            Padding="5" />
                </Border>

                <Border Background="#1E90FF" 
        CornerRadius="5" 
        Padding="5" 
        Margin="0,0,10,0">
                    <Button Content="Удалить" 
            Width="100" 
            Click="DeleteButton_Click" 
            Background="Transparent" 
            Foreground="White" 
            BorderBrush="Transparent" 
            Padding="5" />
                </Border>

                <Border Background="#1E90FF" 
        CornerRadius="5" 
        Padding="5" 
        Margin="0,0,10,0">
                    <Button Content="Назад" 
            Width="100" 
            Click="BackButton_Click" 
            Background="Transparent" 
            Foreground="White" 
            BorderBrush="Transparent" 
            Padding="5" />
                </Border>

                <Border Background="#1E90FF" 
        CornerRadius="5" 
        Padding="5" 
        Margin="0,0,10,0">
                    <Button Content="Экспорт" 
            Width="100" 
            Click="ExportButton_Click" 
            Background="Transparent" 
            Foreground="White" 
            BorderBrush="Transparent" 
            Padding="5" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>